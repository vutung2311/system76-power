#!/bin/sh

set -e

case "$1" in
    remove)
        rm -f /etc/modprobe.d/system76-power.conf
        rm -f /etc/modules-load.d/system76-power.conf
        rm -f /usr/lib/udev/rules.d/80-nvidia-pm.rules
        systemctl enable nvidia-fallback.service || true
        ;;

    *)
        ;;
esac

#DEBHELPER#

exit 0
